# Amadeus API Configuration
# Get your credentials at: https://developers.amadeus.com
# Test environment credentials (for development)
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here
AMADEUS_API_ENDPOINT=https://test.api.amadeus.com

# Production Amadeus API endpoint (uncomment for production)
# AMADEUS_API_ENDPOINT=https://api.amadeus.com

# Email Configuration (for notifications, confirmations, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Alternative: SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Alternative: Resend (recommended for Next.js)
# RESEND_API_KEY=your_resend_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/flight_search
# DATABASE_URL=mongodb+srv://user:password@cluster.mongodb.net/flight_search

# Authentication (for future user accounts)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# Feature Flags
# ENABLE_REAL_FLIGHT_DATA=false
# ENABLE_USER_ACCOUNTS=false
# ENABLE_BOOKING=false

# Rate Limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=900000

# Cache Configuration
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Logging
# LOG_LEVEL=info
# SENTRY_DSN=your_sentry_dsn_here

# Payment Gateway (for future booking)
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
